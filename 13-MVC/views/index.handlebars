<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <li>
	{{burger_name}}

	<button class="change-devour" data-id="{{id}}" data-newdevoured="{{devoured}}">
        Devour it!!
	</button>

</li>

    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
         <li>
	{{burger_name}}

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group"></div>
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
